<Window x:Class="wpf_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_app"
        mc:Ignorable="d"
        Title="Birth Date Calculator" 
        WindowState="Maximized"
        WindowStyle="None"
        Background="LightGray"
        Topmost="True"
        >
        <!--Title="MainWindow" Height="450" Width="800"-->
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Enter Your Birth Date:" FontSize="20" HorizontalAlignment="Center" Margin="0,10"/>
            <DatePicker x:Name="BirthDatePicker" Width="200" HorizontalAlignment="Center"/>
            <Button Content="Calculate" Click="CalculateDaysPassed" Width="150" Margin="10"/>
            <TextBlock x:Name="ResultText" FontSize="18" TextAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
